<div class = "jumbotron">
<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table class = "table table-dark">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.cost %></td>
        <div class ="aaa">
          <%  if current_user.admin != true %>
        <td><%= link_to 'Register',new_event_userinterest_path(event), class: "btn btn-success  " %></td>
        <% end %>
        <td><%= link_to 'Check', event_path(event), class: "btn btn-success"%></td>
       <%  if current_user.admin? %>
        <td><%= link_to 'Update Event details', edit_event_path(event) , class: "btn btn-success"%></td>
        <td><%= link_to 'Delete Event', event, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      <% end %>      
      </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.admin? %>
<%= link_to 'New Event', new_event_path %>
<% end %>
</div>
<style>
  .aaa{
    color:white;
    
  }
</style>