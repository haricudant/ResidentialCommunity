<p id="notice"><%= notice %></p>

<% content_for(:page_header) {"Welcome to the  Monthly Amenities expenses calculator!"} %>


<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cals.each do |cal| %>
      <tr>
        <td><%= cal.name %></td>
        <td><%= cal.rent %></td>
        <td><%= link_to 'Show', cal %></td>
        <td><%= link_to 'Edit', edit_cal_path(cal) %></td>
        <td><%= link_to 'Destroy', cal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

