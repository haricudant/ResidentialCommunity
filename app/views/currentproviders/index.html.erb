<div class = "jumbotron jumbotron-fluid">
<% if current_user.admin? %>
<p id="notice"><%= notice %></p>

<h2>Current providers</h2>

<table class = "table table-hover">
  <thead>
    <tr>
      <th>Providername</th>
      <th>Cost</th>
      <th>Standingcharge</th>
      <th>Pslvcharge</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @currentproviders.each do |currentprovider| %>
      <tr>
        <td><%= currentprovider.providername %></td>
        <td><%= currentprovider.cost %></td>
        <td><%= currentprovider.standingcharge %></td>
        <td><%= currentprovider.pslvcharge %></td>
        <td><%= link_to 'Show', currentprovider %></td>
        <td><%= link_to 'Edit', edit_currentprovider_path(currentprovider) %></td>
        <td><%= link_to 'Destroy', currentprovider, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Currentprovider', new_currentprovider_path %>
<% else %>
<H1> ONLY ADMINS CAN ACCESS THIS PAGE</H1>
<% end %>
</div>