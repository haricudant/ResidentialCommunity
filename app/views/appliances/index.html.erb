<div class = "jumbotron">
<% if current_user.admin? %>

  <p id="notice"><%= notice %></p>

<h1>Appliances</h1>

<table>
  <thead>
    <tr>
      <th>Appliance name</th>
      <th>Appliance watt</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appliances.each do |appliance| %>
      <tr>
        <td><%= appliance.Appliance_name %></td>
        <td><%= appliance.Appliance_watt %></td>
        <td><%= link_to 'Show', appliance %></td>
        <td><%= link_to 'Edit', edit_appliance_path(appliance) %></td>
        <td><%= link_to 'Destroy', appliance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Appliance', new_appliance_path %>

<% else %>
<h1>ONLY ADMINS CAN ACCESS THIS PAGE</h1>
<% end %>
</div>