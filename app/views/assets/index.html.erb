<p id="notice"><%= notice %></p>
<div class = "jumbotron">
<h1>Assets</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Assetname</th>
      <th>Assettype</th>
      <th>Workingcondition</th>
     
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assets.each do |asset| %>
      <tr>
        <% if asset.user_id == current_user.id %>
      
        <td><%= asset.assetname %></td>
        <td><%= asset.assettype %></td>
        <td><%= asset.workingcondition %></td>
        
        <td><%= link_to 'Show', asset %></td>
        <td><%= link_to 'Edit', edit_asset_path(asset) %></td>
        <td><%= link_to 'Destroy', asset, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Asset', new_asset_path %>
</div>
